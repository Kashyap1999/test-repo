/** @var \Mirasvit\Seo\Block\Adminhtml\Checklist $block */
?>
<div class="mst-checklist">
    <div class="mst-checklist__totals">
        <strong><?= $block->escapeHtml($block->getPassedQTY()) ?> / <?= $block->escapeHtml($block->getTotalQty()) ?></strong> Tests passed. <strong><?= $block->escapeHtml($block->getFailedQty()) ?></strong> test(s) remaining
