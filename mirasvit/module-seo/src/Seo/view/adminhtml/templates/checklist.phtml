                            <p class="hint"><?= /* @noEscape */ $data['hint'] ?></p>
                        </div>
                    <?php endif ?>

                    <?php if ($data['solution']): ?>
                        <div class="mst-checklist__test-solution">
                            <strong><?= $block->escapeHtml(__('Solution')) ?></strong>
                            <p class="solution"><?= /* @noEscape */ $data['solution'] ?></p>
                        </div>
                    <?php endif ?>
                </div>
            </div>
        <?php endforeach ?>
    </div>
</div>

