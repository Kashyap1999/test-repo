<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="mst_reach_snippet_extender" resource="default" engine="innodb"
           comment="Rich Snippet Extender">
        <column xsi:type="int" name="extender_id" padding="11" unsigned="false" nullable="false" identity="true"
                comment="Rich Snippet Extender Id"/>
        <column xsi:type="varchar" name="name" nullable="true" length="255"
                comment="Name"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" identity="false" default="0"
                comment="Is Active"/>
        <column xsi:type="varchar" name="entity_type_id" nullable="false" length="255"
                comment="Entity Type ID"/>
        <column xsi:type="varchar" name="store_ids" nullable="true" length="255"
                comment="Store Views"/>
        <column xsi:type="text" name="snippet" nullable="true"
                comment="JSON Snippet"/>
        <column xsi:type="smallint" name="override" unsigned="true" nullable="false" identity="false" default="0"
                comment="Override non-empty fields"/>
        <column xsi:type="text" name="conditions_serialized" nullable="true"
                comment="Conditions Serialized"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="extender_id"/>
        </constraint>
        <index referenceId="MST_REACH_SNIPPET_EXTENDER_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>
</schema>
